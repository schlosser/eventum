{
  "admin": {
    "output_folder": "css/gen/admin/",
    "depends": [
      "scss/admin/*.scss",
      "scss/common/*.scss"
    ],
    "rules": {

      "scss_admin": {
        "output": "admin.css",
        "inputs": [
          "scss/admin/*.scss",
          "scss/common/*.scss"
        ]
      },

      "scss_auth": {
        "output": "auth.css",
        "inputs": [ "scss/admin/auth/*.scss" ]
      },

      "scss_users": {
        "output": "users.css",
        "inputs": [ "scss/admin/users/*.scss" ]
      },

      "scss_events": {
        "output": "events.css",
        "inputs": [ "scss/admin/events/*.scss" ]
      },

      "scss_posts": {
        "output": "posts.css",
        "inputs": [ "scss/admin/posts/*.scss" ]
      },

      "scss_media": {
        "output": "media.css",
        "inputs": [ "scss/admin/media/*.scss" ]
      }
    }
  },


  "lib": {
    "output_folder": "css/lib/",
    "depends": [],
    "rules": {

      "scss_datetime": {
        "output": "datetime.css",
        "inputs": [
          "scss/lib/bootstrap-datepicker.scss",
          "scss/lib/jquery.timepicker.scss"
        ]
      }
    }
  },


  "client": {
    "output_folder": "css/gen/client/",
    "depends": [
      "scss/client/*.scss",
      "scss/client/components/*.scss",
      "scss/common/*.scss"
    ],
    "rules": {

      "scss_client": {
        "output": "client.css",
        "inputs": [
          "scss/client/*.scss",
          "scss/client/components/*.scss",
          "scss/common/*.scss"
        ]
      },

      "scss_home": {
        "output": "home.css",
        "inputs": [ "scss/client/home/*.scss" ]
      },

      "scss_blog": {
        "output": "blog.css",
        "inputs": [ "scss/client/blog/*.scss" ]
      }
    }
  }

}